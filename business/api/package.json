{
    "name": "replate-business-api",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "tsc",
        "dev": "wrangler dev src/index.ts",
        "deploy": "wrangler deploy src/index.ts",
        "format": "prettier --write .",
        "generate-schemas": "orval --input spec/openapi.yaml --output src/schema.ts --client zod",
        "types": "openapi-typescript ./spec/openapi.yaml --output ./src/api-types.ts"
    },
    "dependencies": {
        "auth0": "^4.29.0",
        "hono": "^4.5.7",
        "jose": "^5.9.3",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20250909.0",
        "openapi-typescript": "^7.9.1",
        "orval": "^7.13.2",
        "prettier": "^3.6.2",
        "typescript": "^5.9.2",
        "wrangler": "^4.35.0"
    }
}
